{
  "name": "blog2026",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsx scripts/build.ts",
    "preview": "pnpm run build && tsx scripts/preview.ts",
    "preview:serve": "tsx scripts/preview.ts",
    "preview:watch": "tsx scripts/dev.ts",
    "check": "tsc --noEmit",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "oxfmt .",
    "format:check": "oxfmt . --check",
    "check:links": "tsx scripts/check-links.ts",
    "check:deployed": "tsx scripts/check-deployed.ts"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "markdown-it": "^14.1.0",
    "shiki": "^3.7.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.3.0",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.30.3"
